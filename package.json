{
  "name": "gaming-hub",
  "version": "0.1.0",
  "main": "src/main/main.js",
  "author": "VocÃª",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm:dev:react\" \"npm:dev:electron\"",
    "dev:react": "cd src/renderer && cross-env VITE_DEV_SERVER_URL=http://localhost:3000 vite --port 3000",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "cd src/renderer && vite build && cd ../.. && electron-builder"
  },
  
  "devDependencies": {
    "concurrently": "^8.0.0",
    "cross-env": "^10.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "electron-is-dev": "^2.0.0",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.3.1",
    "node-fetch": "^2.7.0",
    "node-which": "^1.0.0",
    "windows-shortcuts": "^0.1.0"
  },
  "build": {
    "appId": "com.seunome.gaminghub",
    "productName": "Gaming Hub",
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "sign": false,
      "icon": "public/assets/oblivion-icon.ico"
    }
  }
}
